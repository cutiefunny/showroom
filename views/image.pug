html 
    head 
        title=title 
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.css")
        link(rel='stylesheet', href='/views/css/main.css')
    body
        center
            H1= title 
            table
                tr 
                    td
                        input.ui.button(type="file", id="uploadImg", name="uploadImg", onchange="uploadFile()")
                    td
                        select#use.ui.dropdown
                            option(value="sel") 일반셀카
                            option(value="bod") 아무말
                            option(value="prod") 제품사진
                            option(value="day") 일상사진
                            option(value="etc") 기타
            P
            - var cnt=0;
            table 
                tr
                each image in images
                    if cnt%3===0
                        tr
                    td(style="text-align: center")
                        img(src=image.link, id=image.link, style="width:120px" onclick="modal(this)")
                        br
                        button.ui.mini.button(id=image.deletehash onclick="deleteFile(this)") 삭제
                        button.ui.mini.button(id=image.link onclick="copyUrl(this)")= image.use
                    - cnt++
    .ui.modal
            #detail
    script(src="//code.jquery.com/jquery-1.11.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.js")
    script(src="/script/image.js")
    script(src="/script/callAjax.js")
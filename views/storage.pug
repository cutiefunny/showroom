html 
    head 
        title=title 
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.css")
        link(rel='stylesheet', href='/views/css/main.css')
    body
        center
            H1= title 
            table
                tr 
                    td
                        button#save(onclick="save()") 저장
                    td
                        button#create(onclick="create()") 새로 만들기
            P
            table(width="320px") 
                tr
                    th(width="80px") depth1
                    th(width="80px") depth2
                    th(width="80px") depth3 
                    th(width="80px") 수량
                each product in products 
                    tr
                        td
                            input(value=product.depth1, name="depth1", readonly="true")
                        td
                            input(value=product.depth2, name="depth2", readonly="true")
                        td 
                            input(value=product.depth3, name="depth3", readonly="true")
                        td 
                            input(value=product.Qtty, name="Qtty", onchange="change(this)")
    script(src="//code.jquery.com/jquery-1.11.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/fomantic-ui@2.8.8/dist/semantic.min.js")
    script(src="/script/storage.js")
    script(src="/script/callAjax.js")